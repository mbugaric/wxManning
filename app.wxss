/**app.wxss**/
.container {
  height: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  box-sizing: border-box;
  background-color: white;
} 

.productTypeTabBar{
  display: flex;
  height: 100rpx;
  position: sticky;
  top:0;
  background-color: #333333d1;
  width: 100%;
  justify-content: space-around;
  align-items: center;
}

.productTypeTabItem{
  height: 100rpx;
  display: flex;
  align-items: center;
  color: #9d9d9d;
}

.productList{
  display: flex;
  justify-content: center;
  align-items: center;
}