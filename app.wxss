/**app.wxss**/

.container {
  height: 100%;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  padding: 0;
  box-sizing: border-box;
  background-color: #f4f4f4;
}

.topGrayHelper{
  height: 95rpx;
  width: 100%;
  background-color: #f4f4f4;
  position: sticky;
  top: 0;
  z-index: 2;
}

.productTypeTabBar {
  display: flex;
  height: 85rpx;
  position: fixed;
  top: 20rpx;
  background-color: white;
  width: calc(100% - 45rpx);
  justify-content: space-around;
  align-items: center;
  z-index: 2;
  border-bottom: 4rpx solid #f4f4f4;
  border-top-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
  box-shadow: -2rpx 2rpx 2rpx #e9e9e9;
  font-size: 0.8rem;
}

.productTypeTabItem {
  height: 100rpx;
  display: flex;
  align-items: center;
  color: black;
  flex-basis: 50%;
  justify-content: center;
  font-weight: bold;
}

.selectedTabItem{
  color: #3c67a2;
  border-bottom: 4rpx solid #3c67a2;
}

.productList {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding: 5rpx;
  width: calc(100% - 45rpx);
  margin: 0 40rpx;
}

.productItem {
  width: 100%;
  height: 200rpx;
  background-color: white;
  margin: 2rpx 5rpx;
  padding: 10rpx 0;
  display: flex;
  border-radius: 10rpx;
  box-shadow: -2rpx 2rpx 2rpx #e9e9e9;
}

.productItemRank {
  display: flex;
  flex-basis: 7%;
  align-self: center;
  justify-content: center;
  color: gray;
  font-size: 30rpx;
}

.productItemCover {
  flex-basis: 23%;
}

.productItemCover .productItemCoverInner {
  width: 100%;
  height: 100%;
  align-self: center;
}

.productItemCover .productItemCoverInner image {
  width: 100%;
  max-height: 100%;
  align-self: center;
  border-radius: 5rpx;
  box-shadow: -4rpx 4rpx 5rpx #e9e9e9;
}

.productDetails {
  flex-basis: 70%;
  padding: 0 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.productDetails .productItemTitle {
  font-size: 0.8rem;
}

.productItemTitleContainer {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.MEAPdata {
  display: flex;
  flex-direction: row;
}

.meap-flag {
  margin-left: auto;
  display: flex;
  align-items: center;
  top: 4rpx;
  position: relative;
  flex-basis: 120rpx;
  justify-content:flex-end;
}

.meap-progress-left{
  flex-basis: 50%;
}
.meap-progress {
  flex-basis: 50%;
  box-shadow: none;
  margin-bottom: 0;
  position: relative;
  background-color: white;
  overflow: hidden;
  height: 42rpx;
  border-radius: 12rpx;
  width: 50%;
  border: 1rpx solid #eee;
}

.meap-progress .tick {
  position: absolute;
  height: 100%;
  left: 0;
  border-right: 1rpx solid #eee;
}

.progress-bar {
  float: left;
  width: 0%;
  height: 100%;
  font-size: 26rpx;
  line-height: 42rpx;
  color: #fff;
  text-align: center;
  background-color: #407fbf;
  -webkit-box-shadow: inset 0 -2rpx 0 rgba(0, 0, 0, 0.15);
  box-shadow: inset 0 -2rpx 0 rgba(0, 0, 0, 0.15);
  -o-transition: width 0.6s ease;
  -webkit-transition: width 0.6s ease;
  -moz-transition: width 0.6s ease;
  -ms-transition: width 0.6s ease;
  transition: width 0.6s ease;
}

.progress-bar-success {
  background-color: #66a835;
}

.meap-flag image {
  width: 104rpx;
  height: 42rpx;
}
